# ============================================
# Configuración de zsh-functions
# ============================================
# 
# INSTRUCCIONES:
# 1. Copia este archivo a .env: cp .env.example .env
# 2. Edita .env con tus valores reales
# 3. El archivo .env NO se subirá al repositorio (está en .gitignore)
#
# NOTA: Este archivo contiene valores de ejemplo/dummy
# ============================================

# ============================================
# Configuración de Deployment (Quicksilver)
# ============================================

# URL base del servidor de Quicksilver
# Ejemplo: https://quicksilver-es.prod.ok-cloud.net
export DEPLOY_SERVER_URL="https://your-deployment-server.example.com"

# ID de la aplicación en Quicksilver
# Ejemplo: 138
export DEPLOY_APP_ID="YOUR_APP_ID"

# IDs de servicios
# Ejemplo: security=2701, login=2700
export DEPLOY_SERVICE_SECURITY_ID="YOUR_SECURITY_SERVICE_ID"
export DEPLOY_SERVICE_LOGIN_ID="YOUR_LOGIN_SERVICE_ID"

# IDs de entornos (formato: ID:NOMBRE)
# Los entornos se desplegarán en el orden listado aquí
# Ejemplo: "1858:DEVELOPMENT"
export DEPLOY_ENVIRONMENTS=(
  "ENV_ID_1:DEVELOPMENT"
  "ENV_ID_2:DEVELOPMENT Contact Center"
  "ENV_ID_3:QUALITY ASSURANCE"
  "ENV_ID_4:QUALITY ASSURANCE Contact Center"
  "ENV_ID_5:STAGING"
  "ENV_ID_6:STAGING Contact Center"
)

# ============================================
# Configuración de Wiremock
# ============================================

# URL del servidor Wiremock
# Ejemplo: http://localhost:8080
export WIREMOCK_SERVER_URL="http://localhost:8080"

# ============================================
# Configuración de Directorios
# ============================================

# Directorio base de código (relativo a $HOME)
# Ejemplo: code
export CODE_DIR="code"

# Directorio de trabajo corporativo (relativo a $HOME/$CODE_DIR)
# Ejemplo: grupo-santander-ods
export WORK_DIR="your-work-directory"

# ============================================
# Otras configuraciones
# ============================================

# Añade aquí más variables según sea necesario
# OTRA_CONFIG="valor"
